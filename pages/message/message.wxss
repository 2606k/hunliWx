/* pages/message/message.wxss */
.container {
  padding: 30rpx;
  background: url('https://marry-wx.oss-cn-beijing.aliyuncs.com/bg4.jpg') no-repeat;
  background-size: cover;
  background-position: center center;
  height: 100vh;
  background-attachment: fixed;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin: 20rpx 0 30rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #eac122;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #eac122;
}

/* 留言列表容器 */
.message-list-container {
  margin: 100rpx 0 550rpx 0;
  padding: 0 20rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  text-align: center;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #eac122;
}

.list-count {
  font-size: 24rpx;
  color: #eac122;
}

/* 三排留言布局 */
.message-row {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.message-row:nth-child(2) {
  animation: scrollLeft 20s linear infinite;
}

.message-row:nth-child(3) {
  animation: scrollRight 25s linear infinite;
}

.message-row:nth-child(4) {
  animation: scrollLeft 30s linear infinite;
}

/* 自动滚动动画 */
@keyframes scrollLeft {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

@keyframes scrollRight {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.message-item {
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin: 0 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  min-width: 280rpx;
  max-width: 320rpx;
  flex-shrink: 0;
  transition: transform 0.3s ease;
}

.message-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.message-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  align-self: center;
  overflow: hidden;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-text {
  color: #eac122;
  font-size: 28rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.message-content {
  flex: 1;
  text-align: center;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.message-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #eac122;
  margin-right: 10rpx;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-time {
  font-size: 22rpx;
  color: #eac122;
  flex-shrink: 0;
}

.message-text {
  font-size: 26rpx;
  color: #eac122;
  line-height: 1.5;
  word-wrap: break-word;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-align: left;
}

/* 右下角新增留言按钮 */
/* 新增按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 157, 0.4);
  z-index: 999;
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 157, 0.3);
}

.add-icon {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  line-height: 1;
}

.add-text {
  font-size: 20rpx;
  color: #f0f0f0;
  margin-top: 5rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #eac122;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #eac122;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #ff6b9d;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.6;
  position: relative;
}

.form-textarea:focus {
  border-color: #ff6b9d;
}

.char-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #eac122;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn-secondary {
  background: #f5f5f5;
  color: #eac122;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin-top: 20rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #eac122;
}

/* 未授权提示样式 */
.auth-tip {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  margin: 0 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 107, 157, 0.3);
}

.auth-tip-text {
  font-size: 24rpx;
  color: #ff6b9d;
}

/* 通用背景图片解决方案 */
.container {
  position: relative;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: url('https://marry-wx.oss-cn-beijing.aliyuncs.com/bg4.jpg') no-repeat;
  background-size: cover;
  background-position: center center;
  z-index: -1;
  pointer-events: none;
}

/* 用户信息填写弹窗样式 */
.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  border: none;
  width: 100%;
  box-sizing: border-box;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 2rpx solid #e0e0e0;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666;
} 
/* pages/story/story.wxss */
/* 页面根背景，固定在视口上 */
page {
  background: url('https://marry-wx.oss-cn-beijing.aliyuncs.com/bg2.jpg') no-repeat fixed;
  background-size: cover;
  background-position: center center;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  /* 移除背景相关属性，背景现在由page控制 */
}

/* 页面标题 */
.page-header {
  text-align: center;
  /* margin-bottom: 40rpx; */
  /* margin: 20rpx 0 30rpx 0; */
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #eac122;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #eac122;
}

/* 时间轴 */
.timeline {
  position: relative;
  width: 100%;
  margin-top: 195rpx;
}


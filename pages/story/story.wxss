.timeline-content {
  flex: 1;
  /*margin-left: 20rpx;  减少左边距 */
  max-width: calc(100% - 260rpx); /* 调整宽度，确保不会超出容器 */
  display: flex;
  justify-content: flex-end; /* 右侧内容右对齐 */
  height: auto; /* 自动调整高度 */
  align-self: flex-start; /* 确保右侧内容始终在顶部 */
  
}

.story-card {
  width: 70%; /* 确保卡片占满容器宽度 */
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  height: auto; /* 自动调整高度 */
  min-height: fit-content; /* 根据内容适应高度 */
}


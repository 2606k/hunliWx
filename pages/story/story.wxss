.timeline-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
  justify-content: space-around;
  width: 100%;
  align-items: flex-start; /* 顶部对齐，确保高度不一致时的布局正确 */
  min-height: 160rpx; /* 至少与日期图片高度一致 */
}

.timeline-left {
  width: 240rpx; /* 调整为与图片实际宽度一致 */
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 左侧内容左对齐 */
  position: relative;
  align-self: flex-start; /* 确保左侧内容始终在顶部 */
}

.timeline-date {
  /* width已在行内样式中设置为120px，这里不需要再设置 */
  height: 160rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: left center; /* 左对齐 */
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 20rpx;
  z-index: 1;
}

.date-time {
  font-size: 24rpx;
  font-family: "阿里妈妈灵动体 VF Thin";
  -webkit-text-stroke: 1px #eac122; 
  /* -webkit-text-fill-color : transparent; */
  /* font-weight: bold; */
  font-variation-settings: "SRIF" 0.41, "slnt" 12,"wdth" 75, "wght" 158.65;
  /* color:rgb(241, 227, 25); */
  text-align: center;
  position: absolute;
  top: 83rpx; /* 可以手动调整位置 */
  right: -20px;
  width: 100%;
}


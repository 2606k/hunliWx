.story-title {
  font-size: 40rpx;
  font-weight: bold;
  /* color: #333; */
  -webkit-text-stroke: 0.2px #eac122; 
  /* -webkit-text-fill-color : transparent; */
  color:#fff;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 删除按钮样式 */
.delete-btn {
  width: 40rpx;
  height: 40rpx;
  /* background: rgba(255, 107, 157, 0.8); */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.delete-icon {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
}

.story-content {
  font-size: 28rpx;
  color: #eac122;
  line-height: 1.6;
  margin-bottom: 20rpx;
  height: auto; /* 自动调整高度 */
  word-wrap: break-word; /* 确保长文本会自动换行 */
  overflow: visible; /* 确保内容不会被截断 */
  width: 100%; /* 确保宽度占满父容器 */
}

/* 故事内容包装器 */
.story-content-wrapper {
  position: relative;
  margin-bottom: 20rpx;
  height: auto; /* 自动调整高度 */
  width: 100%; /* 确保宽度占满父容器 */
}

/* 性别图标 */
.gender-icon {
  position: absolute;
  top: -50px;
  right: -14px;
  width: 40rpx;
  height: 40rpx;
}

.story-images {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.story-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.story-time {
  font-size: 24rpx;
  color: #eac122;
  text-align: right;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin-top: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #eac122;
}

/* 新增按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 157, 0.4);
  z-index: 999;
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 157, 0.3);
}

.add-icon {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  line-height: 1;
}

.add-text {
  font-size: 20rpx;
  color: white;
  margin-top: 5rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  max-height: 80vh;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #ff6b9d;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  resize: vertical;
}

.form-textarea:focus {
  border-color: #ff6b9d;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

/* 性别选择框 */
.gender-radio-group {
  display: flex;
  gap: 30rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

/* 图片上传区域 */
.upload-area {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.upload-btn {
  width: 150rpx;
  height: 150rpx;
  background: #f5f5f5;
  border: 2rpx dashed #ccc;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 预览图片区域 */
.preview-images {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.preview-item {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(250, 2, 2, 0.5);
  color: white;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 10rpx;
}

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { 
    transform: translateY(50rpx);
    opacity: 0;
  }
  to { 
    transform: translateY(0);
    opacity: 1;
  }
} 

/* 图文混排工具栏 */
.rich-editor-toolbar {
  display: flex;
  padding: 10rpx 0;
  border-top: 1rpx solid #e0e0e0;
  margin-top: 10rpx;
}

.toolbar-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.toolbar-icon {
  font-size: 32rpx;
  margin-right: 6rpx;
}

.toolbar-text {
  font-size: 24rpx;
  color: #666;
}

/* 图文混排预览 */
.rich-content-preview {
  margin-top: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  background: #fafafa;
}

.preview-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.preview-blocks {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.preview-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-wrap: break-word;
}

/* 故事内容中的图片样式 */
.story-content-image {
  width: 100%;
  margin: 10rpx 0;
  border-radius: 8rpx;
  display: block;
  max-width: 100%;
}

/* 预览图片样式 */
.preview-rich-image {
  width: 100%;
  border-radius: 8rpx;
  margin: 10rpx 0;
  display: block;
  max-width: 100%;
} 

/* 图片容器 */
.image-container {
  width: 100%;
  margin: 10rpx 0;
  position: relative;
}

/* 图片调试信息容器 */
.image-debug-info {
  margin-top: 5rpx;
  border: 1rpx solid #eee;
  padding: 8rpx;
  border-radius: 4rpx;
  background-color: #f9f9f9;
}

/* 图片URL调试信息 */
.image-url-debug {
  font-size: 20rpx;
  color: #999;
  word-break: break-all;
  padding: 2rpx 0;
}

/* 图片加载状态 */
.image-load-status {
  font-size: 20rpx;
  font-weight: bold;
  padding: 2rpx 0;
}

.image-load-status:empty {
  display: none;
}

/* 用户信息填写弹窗样式 */
.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  border: none;
  width: 100%;
  box-sizing: border-box;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 2rpx solid #e0e0e0;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666;
} 
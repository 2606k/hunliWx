/* pages/photo/photo.wxss */
page {
  background: url('http://124.222.172.221:9000/marry/bg3.jpg') no-repeat fixed;
  background-size: cover;
  background-position: center center;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  /* 移除背景相关属性，背景现在由page控制 */
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: rgb(185, 72, 72);
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgb(134, 52, 52);
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: white;
  border-radius: 15rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #ff6b9d;
  color: white;
}

/* 上传按钮 */
.upload-btn-container {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
}

.upload-btn {
  background: #ff6b9d;
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: none;
}

.upload-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

/* 滑动容器样式 */
.photo-swiper {
  width: 100%;
  height: calc(100vh - 300rpx);
}

/* 单张照片容器 */
.single-photo-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.single-photo-item {
  width: 100%;
  height: 100%;
  /* display: flex; */
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border-radius: 15rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  /* background-color: rgba(255, 255, 255, 0.1); */
  backdrop-filter: blur(5px);
  transition: transform 0.3s ease;
  
  /* 白色相框样式 */
  background-color: white;
  padding: 40rpx 40rpx 80rpx 40rpx; /* 底部留更多空间模拟相片效果 */
  box-shadow: 
    0 0 0 2rpx #f0f0f0,
    0 4rpx 8rpx rgba(0, 0, 0, 0.1),
    0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid #e8e8e8;
}

.single-photo-item:active {
  transform: scale(0.98);
}

.single-photo-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 瀑布流 - 保留但不使用 */
.waterfall {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  width: 90%;
  margin: 0 auto;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  max-width: 45%;
}

.photo-item {
  overflow: hidden;
  transition: transform 0.3s ease;
  position: relative;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.photo-item:active {
  transform: scale(0.98);
}

.photo-image {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 10rpx;
}

.photo-desc {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.photo-time {
  font-size: 24rpx;
  /* color: rgb(255, 255, 255); */
  color: transparent;
}

/* 页码指示器 */
.page-indicator {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.indicator-dots {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10rpx;
  max-width: 80%;
}

.indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
  cursor: pointer;
  padding: 3rpx;
  box-sizing: content-box;
}

.indicator-dot:hover {
  background-color: rgba(255, 107, 157, 0.7);
}

.indicator-dot.active {
  background-color: #ff6b9d;
  transform: scale(1.2);
}

/* 删除按钮样式 */
.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.delete-icon {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin-top: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 
.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="hearts" patternUnits="userSpaceOnUse" width="20" height="20"><path d="M10,6 Q10,2 6,2 Q2,2 2,6 Q2,10 10,18 Q18,10 18,6 Q18,2 14,2 Q10,2 10,6" fill="rgba(255,255,255,0.15)"/></pattern></defs><rect width="100" height="100" fill="url(%23hearts)"/></svg>'); */
  pointer-events: none;
  animation: float 20s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-10px) rotate(1deg); }
}

/* Ë£ÖÈ•∞ÂÖÉÁ¥† */
.decoration-hearts {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.heart {
  position: absolute;
  font-size: 24rpx;
  opacity: 0.6;
  animation: floatHeart 6s ease-in-out infinite;
}

.heart:nth-child(1) {
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.heart:nth-child(2) {
  top: 20%;
  right: 15%;
  animation-delay: 1s;
}

.heart:nth-child(3) {
  top: 60%;
  left: 5%;
  animation-delay: 2s;
}

.heart:nth-child(4) {
  top: 70%;
  right: 10%;
  animation-delay: 3s;
}

.heart:nth-child(5) {
  top: 40%;
  left: 50%;
  animation-delay: 4s;
}

@keyframes floatHeart {
  0%, 100% { 
    transform: translateY(0px) rotate(0deg) scale(1);
    opacity: 0.6;
  }
  50% { 
    transform: translateY(-20px) rotate(10deg) scale(1.1);
    opacity: 0.8;
  }
}


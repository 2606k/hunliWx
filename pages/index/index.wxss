  flex-direction: column;
  justify-content: center;
  position: relative;
  padding: 0;
  height: 100%;
  max-height: calc(100vh - 400rpx);
}

.auth-section::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
